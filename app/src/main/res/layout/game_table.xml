<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="15dp"
    card_view:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/lightGrey"
        android:elevation="10sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Table Name"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@android:color/black"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:srcCompat="@drawable/oak_wood_frame_small"
                android:id="@+id/table_frame"
                android:layout_marginTop="40sp"
                android:layout_marginBottom="40sp"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="30sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:srcCompat="@drawable/purple_felt"
                android:id="@+id/table_felt"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="125sp"
                android:layout_centerVertical="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/table_frame"
                android:layout_alignStart="@id/table_frame"
                android:layout_marginBottom="-20sp"
                android:layout_marginStart="70sp"
                android:id="@+id/player1"
                android:orientation="vertical">

                <com.bgonline.bgfinder.RoundedImageView
                    android:layout_width="70sp"
                    android:layout_height="70sp"
                    android:src="@drawable/meeples_pic"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player1"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/table_frame"
                android:layout_alignEnd="@id/table_frame"
                android:layout_marginBottom="-20sp"
                android:layout_marginEnd="70sp"
                android:id="@+id/player2"
                android:orientation="vertical">

                <com.bgonline.bgfinder.RoundedImageView
                    android:layout_width="70sp"
                    android:layout_height="70sp"
                    android:src="@drawable/meeples_pic"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player2"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/table_frame"
                android:layout_alignStart="@id/table_frame"
                android:layout_marginTop="-20sp"
                android:layout_marginStart="70sp"
                android:id="@+id/player3"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player3"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <com.bgonline.bgfinder.RoundedImageView
                    android:layout_width="70sp"
                    android:layout_height="70sp"
                    android:src="@drawable/meeples_pic"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/table_frame"
                android:layout_alignEnd="@id/table_frame"
                android:layout_marginTop="-20sp"
                android:layout_marginEnd="70sp"
                android:id="@+id/player4"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player4"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <com.bgonline.bgfinder.RoundedImageView
                    android:layout_width="70sp"
                    android:layout_height="70sp"
                    android:src="@drawable/meeples_pic"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="-20sp"
                android:id="@+id/player5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player5"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:rotation="90"/>

                <com.bgonline.bgfinder.RoundedImageView
                    android:layout_width="70sp"
                    android:layout_height="70sp"
                    android:src="@drawable/meeples_pic"
                    android:layout_marginLeft="-25sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="-20sp"
                android:id="@+id/player6"
                android:orientation="horizontal">

                <com.bgonline.bgfinder.RoundedImageView
                    android:layout_width="70sp"
                    android:layout_height="70sp"
                    android:src="@drawable/meeples_pic"
                    android:layout_marginRight="-25sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player6"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:rotation="-90"/>
            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/cardview_dark_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Where?"
                android:gravity="center"
                android:layout_weight="10"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="When?"
                android:gravity="center"
                android:layout_weight="10"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@android:color/white"/>


        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>