<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <Button
        android:text="Invite Players"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/table_option_invite_button" />
    <Button
        android:text="edit table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/table_option_edit_button" />
    <Button
        android:text="leave table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/table_option_leave_button" />

    <Button
        android:text="cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/table_option_cancel_button" />
</LinearLayout>